{
  "name": "@moodlenet/unsplash",
  "version": "0.2.0",
  "license": "AGPL-3.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=16",
    "npm": ">=8",
    "yarn": "please-use-npm"
  },
  "moodlenet": {
    "creator": "MoodleNet",
    "displayName": "Unsplash"
  },
  "keywords": [
    "moodlenetPackage"
  ],
  "description": "Unsplash\nFind great images for your content",
  "files": [
    "dist/",
    "src/"
  ],
  "exports": {
    "./init": "./dist/server/init.mjs",
    "./server": "./dist/server/exports.mjs",
    "./common": "./dist/common/exports.mjs",
    "./ui": "./dist/webapp/exports/ui.mjs",
    "./stories": "./dist/webapp/exports/stories.mjs",
    "./webapp": "./dist/webapp/exports/webapp.mjs"
  },
  "repository": "https://gitlab.com/moodlenet/moodlenet",
  "author": "https://github.com/aleclofabbro",
  "dependencies": {
    "dot": "^1.1.3",
    "formik": "^2.2.9",
    "yup": "^0.32.11"
  },
  "peerDependencies": {
    "@moodlenet/arangodb": "^0.3.0",
    "@moodlenet/component-library": "^0.3.0",
    "@moodlenet/core": "^0.3.0",
    "@moodlenet/crypto": "^0.3.0",
    "@moodlenet/email-service": "^0.3.0",
    "@moodlenet/http-server": "^0.3.0",
    "@moodlenet/key-value-store": "^0.3.0",
    "@moodlenet/react-app": "^0.3.0",
    "@moodlenet/web-user": "^0.3.0"
  },
  "devDependencies": {
    "@moodlenet/arangodb": "^0.3.0",
    "@moodlenet/component-library": "^0.3.0",
    "@moodlenet/core": "^0.3.0",
    "@moodlenet/crypto": "^0.3.0",
    "@moodlenet/http-server": "^0.3.0",
    "@moodlenet/key-value-store": "^0.3.0",
    "@moodlenet/react-app": "^0.3.0",
    "@moodlenet/web-user": "^0.3.0",
    "@types/dot": "^1.1.5",
    "@types/node": "^17.0.35",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "react-router-dom": "^6.3.0",
    "typescript": "^4.7.2"
  },
  "scripts": {
    "dev-assistant": "npm-watch copy-assets & npm-watch create-components-index",
    "dev-init": "npm run copy-assets",
    "copy-assets": "copyfiles -u 1 src/**/*.{scss,png,svg,json,jpg} dist",
    "create-components-index": "vgis src/webapp/ui.mts"
  },
  "watch": {
    "create-components-index": {
      "patterns": [
        "src/webapp/**/*"
      ],
      "extensions": ".ts,.tsx,.mts",
      "delay": 300
    },
    "copy-assets": {
      "patterns": [
        "src/**/*"
      ],
      "extensions": ".scss,.png,.svg,.json",
      "ignore": "**/*.*ts*",
      "delay": 300
    }
  }
}
